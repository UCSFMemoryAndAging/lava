<?xml version="1.0"?> 

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"
    [<!ENTITY protocolInclude SYSTEM "classpath://../hibernate/crms/protocol/protocolInclude.xml" >
     <!ENTITY protocolFilterInclude SYSTEM "classpath://../hibernate/crms/protocol/protocolFilterInclude.xml" >]>
     
<hibernate-mapping>

<class name="edu.ucsf.lava.crms.protocol.model.ProtocolVisitBase" table="prot_node" select-before-update="true">

	&protocolInclude;

	<many-to-one name="timepointBase" class="edu.ucsf.lava.crms.protocol.model.ProtocolTimepointBase" column="parent_id" lazy="false"/>
	<many-to-one name="visitConfigBase" column="config_node_id" class="edu.ucsf.lava.crms.protocol.model.ProtocolVisitConfigBase" lazy="false"/>
	
	<!-- bilateral -->
	<set name="instrumentsBase" table="prot_node" inverse="true" cascade="all,delete-orphan" order-by="list_order" lazy="true">
		<key column="parent_id"/>
		<one-to-many class="edu.ucsf.lava.crms.protocol.model.ProtocolInstrumentBase"/> 
	</set>
	
	&protocolFilterInclude;
	
</class>	
	
		
</hibernate-mapping>
